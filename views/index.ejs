    <!-- Script for page load and last content switch -->
    <script>
        $(document).ready(async function() {
            await sleep(1500)
            $('#loader').hide('slow')
        });
        // Can be used for interactive width
        window.addEventListener('resize', function(event){
            console.log(document.body.clientWidth)
        });
        // Sleep function to ensure loading
        function sleep (time) {
            return new Promise((resolve) => setTimeout(resolve, time));
        }
